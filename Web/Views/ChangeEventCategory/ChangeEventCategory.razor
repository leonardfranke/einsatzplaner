@inherits ChangeEventCategoryBase
@using Web.Extensions

<EditForm EditContext="EditContext" OnValidSubmit="SaveEventCategory">
    <label class="form-label">Name</label>
    <InputText @bind-Value="EventCategoryData.Name" class="form-control mb-3"/>  
    

    <hr />
    @if (IsUpdate)
    {
        <button class="btn btn-danger" type="button" @onclick="DeleteEventCategory">Löschen</button>
    }
    <div class="float-end">
        <button class="btn btn-primary" type="submit">Speichern</button>
    </div>
</EditForm>