@inherits MemberSelectionBase

<MudDialog>
    <DialogContent>
        @foreach(var group in GroupedMembers)
        {
            <MudSimpleTable>
                <tbody>
                    @foreach(var member in group)
                    {
                        <tr>
                            <td><input type="checkbox" checked="@GetIsSelected(member.Id)" @onchange="(e) => { SetMember(member.Id, (bool)e.Value); }" /></td>
                            <td>@member.Name</td>
                        </tr>
                    }
                </tbody>
            </MudSimpleTable>
        }
    </DialogContent>
</MudDialog>
