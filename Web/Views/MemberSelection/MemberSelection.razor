@inherits MemberSelectionBase

<MudDialog>
    <DialogContent>
        <MudTable Dense GroupBy="GroupDefinition" Items="OrderedMembers" Breakpoint="Breakpoint.None">
            <RowTemplate>
                <MudTd><input type="checkbox" checked="@GetIsSelected(context.Id)" @onchange="(e) => { SetMember(context.Id, (bool)e.Value); }" /></MudTd>
                <MudTd>@context.Name</MudTd>
            </RowTemplate> 
            <GroupHeaderTemplate>
                <MudTh colspan="2">@context.Key</MudTh>

            </GroupHeaderTemplate>
        </MudTable>        
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">Speichern</MudButton>
    </DialogActions>
</MudDialog>
